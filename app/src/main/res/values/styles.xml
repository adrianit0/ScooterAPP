<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/secundaryColor</item>
    </style>

    <!-- Base application theme. -->
    <style name="MantenimientoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColorMantenimiento</item>
        <item name="colorPrimaryDark">@color/primaryColorDarkMantenimiento</item>
        <item name="colorAccent">@color/secundaryColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Texto de título -->
    <style name="textoTitulo">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/titulo</item>
        <!-- padding -->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <!-- margin -->
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!-- Texto normal -->
    <style name="textoNormal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textoNegrita" parent="textoNormal">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Texto contenido -->
    <style name="textoContenido">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- margin -->
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- Boton por defecto -->
    <style name="DefaultButton">
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:textColor">@color/onSecundary</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!-- Botón para el menu -->
    <style name="MenuButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <!-- padding -->
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <!-- Botón para las notificaciones -->
    <style name="NotificacionButton" parent="DefaultButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Botón para incidencias -->
    <style name="IncidenciaButton" parent="DefaultButton">
        <item name="android:layout_weight">0.5</item>
        <item name="android:textAllCaps">false</item>

        <!-- Margin -->
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <!-- padding -->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- EditText por defecto -->
    <style name="DefaultEditText">
        <item name="android:background">@drawable/myedittext</item>
        <!-- padding -->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <!-- margin -->
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- Hipervinculo -->
    <style name="Link">
        <item name="android:textColor">@color/link</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Separador -->
    <style name="Separador">
        <item name="android:background">@color/primaryColor</item>
        <!-- margin -->
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>
