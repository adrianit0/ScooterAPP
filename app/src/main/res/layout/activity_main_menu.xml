<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainMenu"
    android:orientation="vertical"
    android:background="@color/fondoMenu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d43b3b"
        android:text="PLACEHOLDER DEL LOGO"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textoContenido"
        android:text="Slogan corporativo"
        android:textStyle="bold|italic"
        android:textColor="@color/onSurface"

        android:textSize="15sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mysurfacepanel"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tienes 43 minutos de bono"
            android:textAlignment="center"
            android:textColor="@color/onSurface"
            android:drawableStart="@drawable/mainmenu_info"
            android:gravity="center"
            style="@style/textoContenido"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton2"
        android:text="Alquilar Scooter"
        android:drawableStart="@drawable/mainmenu_bike"
        style="@style/MenuButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton2"
        android:text="Realizar incidencia"
        android:drawableStart="@drawable/mainmenu_incidencia"
        style="@style/MenuButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton2"
        android:text="Ayuda y contacto"
        android:drawableStart="@drawable/mainmenu_help"
        style="@style/MenuButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton2"
        android:text="Bonos y packs"
        android:drawableStart="@drawable/mainmenu_pack"
        style="@style/MenuButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton2"
        android:text="Desconectarse"
        android:drawableStart="@drawable/mainmenu_disconnect"
        style="@style/MenuButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b74d4d"></LinearLayout>



</LinearLayout>